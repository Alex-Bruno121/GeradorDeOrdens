{
  "openapi": "3.0.1",
  "info": {
    "title": "Order Accumulator API",
    "description": "API para processamento de ordens financeiras",
    "contact": {
      "name": "Alexsandro Bruno",
      "url": "https://github.com/Alex-Bruno121/",
      "email": "a.brunosousa01@gmail.com"
    },
    "license": {
      "name": "Free License",
      "url": "https://github.com/Alex-Bruno121/"
    },
    "version": "v1"
  },
  "paths": {
    "/Order/processar/ordem-ativo": {
      "post": {
        "tags": [
          "Order"
        ],
        "summary": "Processa ordens de compra e venda de ativos",
        "requestBody": {
          "description": "Dados da ordem (ativo, lado, quantidade, preço)",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderModels"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderModels"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/OrderModels"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Retorna um objeto json (sucesso, exposicao_atual e msg_erro)"
          }
        }
      }
    },
    "/Order/busca/historicos-movimentacoes": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "Resgata todo o historico de ordens de compra e venda de ativos",
        "responses": {
          "200": {
            "description": "Retorna uma lista de movimentações (MovimentacoesResponse)"
          }
        }
      }
    },
    "/Order/busca/ultimas-movimentacoes": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "Resgata as ultimas ordens de compra e venda por ativos",
        "responses": {
          "200": {
            "description": "Retorna uma lista das ultimas movimentações por ativos (MovimentacoesResponse)"
          }
        }
      }
    },
    "/Order/limpa-historico": {
      "delete": {
        "tags": [
          "Order"
        ],
        "summary": "Limpa a tabela de historico de ordens para reprocessamento",
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "Retorna noContent (204)"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OrderModels": {
        "type": "object",
        "properties": {
          "ativo": {
            "type": "string",
            "nullable": true
          },
          "lado": {
            "type": "string"
          },
          "quantidade": {
            "type": "integer",
            "format": "int32"
          },
          "preco": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      }
    }
  }
}